{% extends "@App/Admin/base.html.twig" %}

{% block title %}Testas{% endblock %}

{% block stylesheets %}

    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}

    <!-- Custom CSS -->
    <link rel="stylesheet" href={{ asset('bundles/app/style/admin/simple-sidebar.css') }} />
    <style>
    td{
        padding-bottom: 5px;
        padding-right: 10px;
    }
    </style>
    <link rel="stylesheet" href={{ asset('bundles/app/style/admin/simple-sidebar.css') }} />
    <link rel="stylesheet" href={{ asset('bundles/app/style/admin/tests.css') }} />
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
{% endblock %}
{% block body %}
    <div id="wrapper">

        {% include "AppBundle:Admin:header.html.twig" %}

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table">
                            <thead>
                            Pasirinktas Testas
                            </thead>
                            <tr>
                                <td>id</td><td>Pavadinimas</td><td>Aprašymas</td>
                            </tr>
                                <tr >
                                    <td>{{ test.id }}</td><td>{{ test.name }} </td>
                                    <td>
                                        {{ test.description }}
                                    </td>
                                </tr>
                        </table>

                    </div>
                    <div class="col-lg-4">
                        <header>
                            <p>
                                Ištrinti testą
                            </p>
                        </header>
                        <a href='{{ path('homepage') }}admin/tests/delete/{{ test.id }}'>Trinti</a>
                    </div>
                    <div class="col-lg-4">
                        <header>
                            <p>
                                Publikuoti testą
                            </p>
                        </header>
                        {% if test.published == 0 %}
                        <a href='{{ path('homepage') }}admin/tests/publish/{{ test.id }}'>Publikuoti</a>
                        {% else %}
                        <a href='{{ path('homepage') }}admin/tests/depublish/{{ test.id }}'>Depublikuoti</a>
                        {% endif %}
                    </div>
                    <div class="col-lg-4">
                        <p>Testai</p>
                        <a href="{{ path('edit_admin_test',{id:test.id}) }}">
                            Redaguoti
                        </a>
                    </div>
                    <div class="col-lg-12">
                        <ol>
                            {% for question in questions %}

                                <li>
                                    <a class="w3-tooltip" href="{{ path('questionInfo',{id: question.id }) }}/1">
                                        <span style="position:absolute;left: -40px;bottom: 30px;background: black;"
                                              class="w3-text w3-tag">Id {{ question.id }}</span>
                                        {{ question.text }}</a>
                                </li>
                            {% endfor %}

                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <ol>
            <li {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="{{ path('testsAction', {id: test.id,page: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
            </li>

            {# Render each page number #}
            {% for i in 1..maxPages %}
                <li {{ thisPage == i ? 'class="active"' }}>
                    <a href="{{ path('testsAction', {id: test.id,page: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}

            {# `»` arrow #}
            <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ path('testsAction', {id: test.id,page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
            </li>
        </ol>
        <!-- /#page-content-wrapper -->

    </div>

{% endblock %}
