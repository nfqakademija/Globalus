{% extends "::base.html.twig" %}

{% block title %}{{ test.name }} - {{ parent() }}{% endblock %}


{% block stylesheets %}

    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/app/style/test.css') }}"/>


{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            {{ form_start(form) }}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ test.name }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row bottom-buffer">
                            <div class="col-xs-12">
                                {{ test.description }}
                            </div>
                        </div>
                        <div class="row bottom-buffer">
                            <div class="col-md-4">
                                Testo autorius: {{ test.user.username }}
                            </div>
                            <div class="col-md-4">
                                Klausimų kiekis: {{ test.questionsLimit }}
                            </div>
                            <div class="col-md-4">
                                Laiko limitas : {{ test.timeLimit|date("H:i:s") }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-xs-offset-2">
                                {% if error != null %}
                                    <div class="alert alert-danger">
                                        {{ error }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-xs-offset-3">

                                {{ form_widget(form) }}
                            </div>
                            <!-- <button type="button" class="btn btn-success btn-lg center-block">Pradėti testą</button> -->
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
