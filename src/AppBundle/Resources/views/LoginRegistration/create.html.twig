{% extends "::base.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}Sukurti naują įrašą{% endblock %}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <style>
    .borderLeft {
        border-left: thick solid rgba(0, 255, 0, .2);
    }
    .borderTop {
        border-top: thick solid rgba(0, 255, 0, .2);
    }
    </style>
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}
{% block body %}
    <div>
    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12" >
        <div class="login" style="margin: 130px 60px;">
            <a href="{{ path('fos_user_security_login') }}">
            <button style="padding: 20px 40px;">

                    <span style="color:green;">Prisijungti</span>

            </button>
            </a>
        </div>
    </div>
    <div class="border col-lg-8 col-md-12 col-sm-12 col-xs-12 borderLeft" id="red">
        <header><h3 style="text-align: center">Registracija</h3></header>
        {% if error is defined %}
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p style="color: red; font-family: KacstOffice">
                {{ error }}
            </p>
        </div>
        {% endif %}
        <div>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Registruotis" class="btn btn-default pull-right"/>
            <div class="g-recaptcha" data-sitekey="6LfgEwsUAAAAALpzD57KTyrTr59zEmY6irLPSpJf"></div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    <script>
        // title font size changing script
        jQuery(document).ready(function() {
            var viewportWidth = $(window).width();
            console.log(viewportWidth);
            if (viewportWidth < 1188) {
                $('.border').removeClass('borderLeft').addClass('borderTop');
                $('.login').css("margin",0).css("text-align","center").css("margin-bottom","10px");
            }else{
                $('.border').removeClass('borderTop').addClass('borderLeft');
                $('.login').css("margin-bottom","0px").css("margin","130px 60px").css("text-align","none");
            }
            $(window).resize(function () {

                var viewportWidth = $(window).width();
                console.log(viewportWidth);
                if (viewportWidth < 1188) {
                    $('.border').removeClass('borderLeft').addClass('borderTop');
                    $('.login').css("margin",0).css("text-align","center").css("margin-bottom","10px");
                }else{
                    $('.border').removeClass('borderTop').addClass('borderLeft');
                    $('.login').css("margin-bottom","0px").css("margin","130px 60px").css("text-align","none");
                }
            });


        });
    </script>
{% endblock %}
