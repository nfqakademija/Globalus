{% extends "::base.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}Sukurti naują įrašą{% endblock %}
{% block body %}
    <div style="margin-bottom: 250px;">
        <div>
            <h5>Įveskite slaptažodį</h5>
        </div>
        {% if error is defined %}
            <div class="col-lg-12">
                <p style="color: red; font-family: KacstOffice">
                    {{ error }}
                </p>
            </div>
        {% endif %}
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <input type="submit" value="Siųsti" class="btn btn-default pull-right"/>
        {{ form_end(form) }}
    </div>
{% endblock %}
