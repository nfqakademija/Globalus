
{% extends "@App/Profile/heading.html.twig" %}

{% block content %}

    <div style="margin: 30px 20px;">
        <a href="{{ path('tests') }}">Testai</a>
        <a href="{{ path('user.question.add.answer', {'id': question.id}) }}">Pridėti Atsakymą</a>
        <a href="{{ path('edit_test_question', {'id': question.id}) }}">Redaguoti klausimą</a>
        <table>
            <tr>
                <td>
                    Pavadinimas
                </td>
            </tr>
            <tr>
                <td>
                    {{ question.text }}
                </td>
            </tr>
        </table>
        <ol>
            {% for answer in answers %}
                <li>
                    <ul>
                        <li>
                            {{ answer.text }}
                        </li>
                        <li>
                            {% if answer.correct ==1%}
                            Teisingas
                            {% else %}
                            Neteisingas
                            {% endif %}
                        </li>
                        <li>
                            <a href="{{ path('edit_question_answer', {'id': answer.id})}}">Redaguoti atsakymą</a>
                        </li>
                    </ul>

                </li>
            {% endfor %}
        </ol>

        <hr/>
    </div>

{% endblock %}
