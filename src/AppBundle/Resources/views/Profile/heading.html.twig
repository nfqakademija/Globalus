{% extends "::base.html.twig" %}

{% block title %}Profilis{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}

    <link rel="stylesheet" href={{ asset('bundles/app/style/profile/heading.css') }} />
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">

{% endblock %}

{% block body %}


    <!-- Header -->
    <header class="w3-container" id="portfolio">
        <h1><b>Profilis</b></h1>
        <h5 style="float: right"><a href="{{ path('fos_user_security_logout') }}">Atsijungti</a></h5>


        <div class="w3-section w3-bottombar w3-padding-16 col-md-12 col-sm-12 col-xs-12 ">



            <div id="myNavbar">


                <a href="{{ path('profile') }}">
                    <button class="nvBtn btn col-md-3 col-sm-12 col-xs-12">
                        <i class="fa fa-universal-access w3-margin-right"></i>
                        Informacija
                    </button>
                </a>
                <a href="{{ path('user.tests') }}">
                    <button class="nvBtn btn col-md-3 col-sm-12 col-xs-12">
                        <i class="fa fa-book w3-margin-right"></i>
                        Testų kūrimas
                    </button>
                </a>
                <a href="{{ path('profile-test-results') }}">
                    <button class="nvBtn btn col-md-3 col-sm-12 col-xs-12">
                        <i class="fa fa-book w3-margin-right"></i>
                        Testų rezultatai
                    </button>
                </a>
                <a href="{{ path('changePassword') }}">
                    <button class="nvBtn btn col-md-3 col-sm-12 col-xs-12">
                        <i class="fa fa-user w3-margin-right"></i>
                        Slaptažodžio keitimas
                    </button>
                </a>


            </div>


        </div>


    </header>
    {% block content %}{% endblock %}

    <script src='{{ asset('bundles/app/style/profile/breadcrumbActive.js') }}'></script>

{% endblock %}
