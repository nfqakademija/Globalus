{% extends "::base.html.twig" %}

{% block title %}Profilis{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <style>
        @media (max-width: 480px) {
            .col-xxs {
                display:block;
                float:none;
                width: 100%
            }
        }
        .title {
            margin: 20px auto;
            text-align: center;
            font-size: 96px;
            margin: 0;
            padding: 0;
            font-weight: 100;
            font-family: 'Lato';
        }
        .search{
            border-radius: 5px;
            border-width: 5px;
            border-style: solid;
            background-color: #3c763d;
            border-color: #3c763d;

        }
        h2{
            color: forestgreen;

        }

    </style>

    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">

{% endblock %}

{% block body %}


    <!-- Header -->
    <header class="w3-container" id="portfolio">
        <h1><b>Profilis</b></h1>
        <h5 style="float: right"><a href="{{ path('fos_user_security_logout') }}">Atsijungti</a></h5>
        <div class="w3-section w3-bottombar w3-padding-16 col-md-12 col-sm-12 col-xs-12 col-xxs">

            <a href="{{ path('profile') }}" onclick="myfuncT()">
                <button class="w3-btn w3-white w3-hide-small col-md-4 col-sm-12 col-xs-12 col-xxs" >
                    <i class="fa fa-diamond w3-margin-right"></i>
                    Informacija
                </button>
            </a>
            <a href="#">
                <button class="w3-btn w3-white w3-hide-small col-md-4 col-sm-12 col-xs-12 col-xxs" >
                    <i class="fa fa-diamond w3-margin-right"></i>
                    Testai
                </button>
            </a>
            <a href="{{ path('changePassword') }}">
                <button class="w3-btn w3-white w3-hide-small col-md-4 col-sm-12 col-xs-12" >
                    <i class="fa fa-user w3-margin-right"></i>
                    Slaptažodžio keitimas
                </button>
            </a>

        </div>

    </header>
    {% block content %}{% endblock %}

    <script type="text/javascript" >

        var pagename= location.pathname.split('/').pop();
        document.onreadystatechange = function () {
            if (document.readyState == "complete") {
                ///alert("rRRRRReady");
                if(pagename==""){
                    //alert("someas");
                    $('.w3-btn').removeClass('w3-green').addClass('w3-white w3-hide-small');
                    $('.w3-btn').first().removeClass('w3-white w3-hide-small').addClass('w3-green');
                }
                else if (pagename=="changePassword"){
                    $('.w3-btn').removeClass('w3-green').addClass('w3-white w3-hide-small');
                    $('.w3-btn').eq(2).removeClass('w3-white w3-hide-small').addClass('w3-green');
                }
                //$('.w3-btn').first().removeClass('w3-white w3-hide-small').addClass('w3-green');
                // document is ready. Do your stuff here
            }
        };



    </script>


{% endblock %}
