{% extends "::base.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <link href='http://fonts.googleapis.com/css?family=Merienda+One' rel='stylesheet' type='text/css'>
    <style>

        .title {
            font: 400 100px/1.2 'Merienda One', Helvetica, sans-serif;
            color: rgba(0,0,0,0.7);
            text-shadow: 3px 3px 3px #fff;
            color:#21c221;
        }
        .main-header {
            text-align: center;
        }
        #banner {
            position: absolute;
            top: 0px;
            left: 0px;
            right: 0px;
            width: 100%;
            height: 500px;
            z-index: -1;
        }

        .popNew {
            width: 500px;
            margin: 10px
        }

        ol.popNewList {
            color: #ccc;
            list-style-type: none;
        }

        ol.popNewList li {
            position: relative;
            font: bold italic 45px/1.5 Helvetica, Verdana, sans-serif;
            margin-bottom: 20px;
        }

        .popNewP {
            font: 12px/1.5 Helvetica, sans-serif;
            padding-left: 60px;
            color: #555;
            padding-top: 20px;
        }

        .popNewSpan{
            position: absolute;
        }


    </style>
    <link rel="stylesheet" href={{ asset('bundles/app/style/style.css') }} />
{% endblock %}

{% block body %}
    <header class="main-header" role="banner">
        <img id="banner" src="{{ asset('bundles/app/style/test.jpg') }}"
             alt="BannerImg" height="" width="" style="margin:auto">
    </header>
    <div class="title" style="padding :10px">Testuokis</div>
    <div class="container">

        <div class="row search">

            <form action="" method="post">
                <div style="margin: 40px 20px;">
                    {{ form_start(form) }}


                    <input class="col-lg-10 col-md-10 col-sm-12 col-xs-12" id="search" name="search" required="required" type="search">

                    <button class="buttonP col-lg-2 col-md-2 col-sm-12 col-xs-12" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    <a href="{{ path('search') }}" style="float: right;"><span style="color: white;">Naršyti visus testus</span></a>
                    {{ form_end(form) }}
                </div>


            </form>
        </div>


        <div class="row" style="padding: 20px 20px;padding-top: 200px;    ">


            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h2 class="homeH2">Populiariausi</h2>

                <div class="popNew">
                    <ol class="popNewList">
                        {% for test in testsPop %}
                        <li>
                            <span class="popNewSpan">{{ loop.index }}.</span>
                            <p class="popNewP">
                                {{ test.name }} + aprašymas {{ test.description }}
                            </p>
                        </li>
                        {% endfor %}



                    </ol>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h2 class="homeH2">Nauji</h2>
                <div class="popNew">
                    <ol class="popNewList">
                        {% for test in tests %}
                            <li>
                                <span class="popNewSpan">{{ loop.index }}.</span>
                                <p class="popNewP">
                                    {{ test.name }} + aprašymas {{ test.description }}
                                </p>
                            </li>
                        {% endfor %}
                    </ol>
                </div>
                
            </div>
        </div>
    </div>

{% endblock %}
