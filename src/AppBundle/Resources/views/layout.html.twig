{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href={{ asset('bundles/app/style/style.css') }} />
<style>
    .borderLeft {
        border-left: thick solid rgba(0, 255, 0, .2);
    }
    .borderTop {
        border-top: thick solid rgba(0, 255, 0, .2);
    }
    .regBtn{
        padding: 20px 40px;
        margin-left: 70px;
    }
</style>
{% endblock %}
{% block title %}
Prisijungimas
{% endblock %}
{% block body %}


    <div style="margin: 20px;margin-bottom: 290px;">
    <div class="col-xl-4 col-lg-4 col-sm-12 col-xs-12">
        <div class="social col-lg-12 col-md-6 col-sm-6 col-xs-12" style="margin: 12px;">
            <a  href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" alt="Prisijunkite su Facebook">
                <span class="socialLogin">Prisijunkite naudodamiesi Facebook</span>
                <img src="{{ asset('bundles/app/style/FB-f-Logo__blue_512.png') }}"
                     alt="Smiley face" height="42" width="42" style="margin:auto">
            </a>
            <br>
            <a  href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" alt="Prisijunkite su Google" style="margin-left: 70px;">
                <span class="socialLogin">Arba Google</span><img src="{{ asset('bundles/app/style/Google.jpg') }}"
                                             alt="Smiley face" height="42" width="42" style="margin:auto"></a>
            <hr>
        </div>

        <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12" style="margin-top: 12.5px;">
            <a href="{{ path('app.registration') }}">
                <button class="regBtn">

                    <span style="color:green;">Registruotis</span>

                </button></a>
            <hr>
        </div>
    </div>
        <div class="border col-xl-8 col-lg-8 col-sm-12 col-xs-12 borderLeft" style="padding-bottom: 20px;">
        <header><h3 style="text-align: center">Prisijungimas</h3></header>
    {{ block('fos_user_content') }}
    </div>
    </div>
    <script src='{{ asset('bundles/app/style/loginRegister/onLogResize.js') }}'></script>
{% endblock %}
